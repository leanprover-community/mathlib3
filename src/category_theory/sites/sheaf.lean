  have q‚ÇÇ := h‚ÇÇ (ùüô X) trivial,
  simp only [op_id, functor_to_types.map_id_apply] at q‚ÇÅ q‚ÇÇ,
  rw [q‚ÇÅ, q‚ÇÇ],
