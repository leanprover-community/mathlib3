/-- Add instances `borel Œ± : measurable_space Œ±` and `‚ü®rfl‚ü© : borel_space Œ±`. -/
meta def add_borel_instance (Œ± : expr) : tactic unit :=
do
  n1 ‚Üê get_unused_name "_inst",
