  have h4D : ‚àÄ (t : set Œ≤), t ‚àà D ‚Üí measurable_set t,
  { intros t ht, rw [‚Üê hD], exact measurable_set_generate_from ht },
  refine (h3C.prod h3D h4C h4D).ext
    (generate_from_eq_prod hC hD h3C.is_countably_spanning h3D.is_countably_spanning).symm
    (h2C.prod h2D) _,
