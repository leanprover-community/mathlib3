    (Œª x, (s' n x).integral ŒΩ),
  have hf' : ‚àÄ n, measurable (f' n),
  { intro n, refine measurable.indicator _ (measurable_set_integrable hf),
    have : ‚àÄ x, (s' n x).range.filter (Œª x, x ‚â† 0) ‚äÜ (s n).range,
