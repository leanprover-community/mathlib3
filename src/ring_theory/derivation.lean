/-- The `S`-submodule of `S ‚Üí‚ÇÄ S` (the direct sum of copies of `S` indexed by `S`) generated by
the relations:
1. `dx + dy = d(x + y)`
2. `x dy + y dx = d(x * y)`
3. `dr = 0` for `r ‚àà R`
where `db` is the unit in the copy of `S` with index `b`.

This is the kernel of the surjection `finsupp.total S Œ©[S‚ÅÑR] S (kaehler_differential.D R S)`.
See `kaehler_differential.ker_total_eq` and `kaehler_differential.total_surjective`.
-/
noncomputable
def kaehler_differential.ker_total : submodule S (S ‚Üí‚ÇÄ S) :=
submodule.span S
  ((set.range (Œª (x : S √ó S), single x.1 1 + single x.2 1 - single (x.1 + x.2) 1)) ‚à™
  (set.range (Œª (x : S √ó S), single x.2 x.1 + single x.1 x.2 - single (x.1 * x.2) 1)) ‚à™
  (set.range (Œª x : R, single (algebra_map R S x) 1)))

local notation x `ùñ£` y := (kaehler_differential.ker_total R S).mkq (single y x)

lemma kaehler_differential.ker_total_mkq_single_add (x y z) :
  (z ùñ£ (x + y)) = (z ùñ£ x) + (z ùñ£ y) :=
begin
  rw [‚Üê map_add, eq_comm, ‚Üê sub_eq_zero, ‚Üê map_sub, submodule.mkq_apply,
    submodule.quotient.mk_eq_zero],
  simp_rw [‚Üê finsupp.smul_single_one _ z, ‚Üê smul_add, ‚Üê smul_sub],
  exact submodule.smul_mem _ _ (submodule.subset_span (or.inl $ or.inl $ ‚ü®‚ü®_, _‚ü©, rfl‚ü©)),
end

lemma kaehler_differential.ker_total_mkq_single_mul (x y z) :
  (z ùñ£ (x * y)) = ((z * x) ùñ£ y) + ((z * y) ùñ£ x) :=
begin
  rw [‚Üê map_add, eq_comm, ‚Üê sub_eq_zero, ‚Üê map_sub, submodule.mkq_apply,
    submodule.quotient.mk_eq_zero],
  simp_rw [‚Üê finsupp.smul_single_one _ z, ‚Üê @smul_eq_mul _ _ z,
    ‚Üê finsupp.smul_single, ‚Üê smul_add, ‚Üê smul_sub],
  exact submodule.smul_mem _ _ (submodule.subset_span (or.inl $ or.inr $ ‚ü®‚ü®_, _‚ü©, rfl‚ü©)),
end

lemma kaehler_differential.ker_total_mkq_single_algebra_map (x y) :
  (y ùñ£ (algebra_map R S x)) = 0 :=
begin
  rw [submodule.mkq_apply, submodule.quotient.mk_eq_zero, ‚Üê finsupp.smul_single_one _ y],
  exact submodule.smul_mem _ _ (submodule.subset_span (or.inr $ ‚ü®_, rfl‚ü©)),
end

lemma kaehler_differential.ker_total_mkq_single_algebra_map_one (x) :
  (x ùñ£ 1) = 0 :=
begin
  rw [‚Üê (algebra_map R S).map_one, kaehler_differential.ker_total_mkq_single_algebra_map],
end

lemma kaehler_differential.ker_total_mkq_single_smul (r : R) (x y) :
  (y ùñ£ (r ‚Ä¢ x)) = r ‚Ä¢ (y ùñ£ x) :=
begin
  rw [algebra.smul_def, kaehler_differential.ker_total_mkq_single_mul,
    kaehler_differential.ker_total_mkq_single_algebra_map, add_zero,
    ‚Üê linear_map.map_smul_of_tower, finsupp.smul_single, mul_comm, algebra.smul_def],
end

/-- The (universal) derivation into `(S ‚Üí‚ÇÄ S) ‚ß∏ kaehler_differential.ker_total R S`. -/
noncomputable
def kaehler_differential.derivation_quot_ker_total :
  derivation R S ((S ‚Üí‚ÇÄ S) ‚ß∏ kaehler_differential.ker_total R S) :=
{ to_fun := Œª x, 1 ùñ£ x,
  map_add' := Œª x y, kaehler_differential.ker_total_mkq_single_add _ _ _ _ _,
  map_smul' := Œª r s, kaehler_differential.ker_total_mkq_single_smul _ _ _ _ _,
  map_one_eq_zero' := kaehler_differential.ker_total_mkq_single_algebra_map_one _ _ _,
  leibniz' := Œª a b, (kaehler_differential.ker_total_mkq_single_mul _ _ _ _ _).trans
    (by { simp_rw [‚Üê finsupp.smul_single_one _ (1 * _ : S)], dsimp, simp }) }

lemma kaehler_differential.derivation_quot_ker_total_apply (x) :
  kaehler_differential.derivation_quot_ker_total R S x = (1 ùñ£ x) := rfl

lemma kaehler_differential.derivation_quot_ker_total_lift_comp_total :
  (kaehler_differential.derivation_quot_ker_total R S).lift_kaehler_differential.comp
    (finsupp.total S Œ©[S‚ÅÑR] S (kaehler_differential.D R S)) = submodule.mkq _ :=
begin
  apply finsupp.lhom_ext,
  intros a b,
  conv_rhs { rw [‚Üê finsupp.smul_single_one a b, linear_map.map_smul] },
  simp [kaehler_differential.derivation_quot_ker_total_apply],
end

