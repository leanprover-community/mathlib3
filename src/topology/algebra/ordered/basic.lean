    lt_of_lt_of_le zero_lt_one $ le_add_of_le_of_nonneg le_rfl (abs_nonneg x)),
  rw ((nhds_basis_zero_abs_sub_lt Œ±).prod $ nhds_basis_abs_sub_lt x).tendsto_iff
