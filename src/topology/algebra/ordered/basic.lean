lemma nhds_eq_map_mul_left_nhds_one {x‚ÇÄ : Œ±} (hx‚ÇÄ : x‚ÇÄ ‚â† 0) :
  ùìù x‚ÇÄ = map (Œª x, x‚ÇÄ*x) (ùìù 1) :=
begin
  have hx‚ÇÄ' : 0 < abs x‚ÇÄ := abs_pos.2 hx‚ÇÄ,
  refine filter.ext (Œª t, _),
  simp only [exists_prop, set_of_subset_set_of, (nhds_basis_abs_sub_lt x‚ÇÄ).mem_iff,
    (nhds_basis_abs_sub_lt (1 : Œ±)).mem_iff, filter.mem_map'],
  refine ‚ü®Œª h, _, Œª h, _‚ü©,
  { obtain ‚ü®i, hi, hit‚ü© := h,
    refine ‚ü®i / (abs x‚ÇÄ), div_pos hi (abs_pos.2 hx‚ÇÄ), Œª x hx, hit _‚ü©,
    calc abs (x‚ÇÄ * x - x‚ÇÄ) = abs (x‚ÇÄ * (x - 1)) : congr_arg abs (by ring_nf)
      ... = abs x‚ÇÄ * abs (x - 1) : abs_mul x‚ÇÄ (x - 1)
      ... < abs x‚ÇÄ * (i / abs x‚ÇÄ) : mul_lt_mul' le_rfl hx (abs_nonneg (x - 1)) (abs_pos.2 hx‚ÇÄ)
      ... = abs x‚ÇÄ * i / abs x‚ÇÄ : by ring
      ... = i : mul_div_cancel_left i (Œª h, hx‚ÇÄ (abs_eq_zero.1 h)) },
  { obtain ‚ü®i, hi, hit‚ü© := h,
    refine ‚ü®i * (abs x‚ÇÄ), mul_pos hi (abs_pos.2 hx‚ÇÄ), Œª x hx, _‚ü©,
