  have : 1 ‚â§ -n := le_neg.mp (int.le_of_lt_add_one (hn.trans_le (neg_add_self 1).symm.le)),
  apply tendsto.congr (show ‚àÄ x : Œ±, x^-(-n) = x^n, by simp),
  lift -n to ‚Ñï using le_of_lt (neg_pos.mpr hn) with N,
