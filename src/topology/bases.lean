lemma has_countable_basis.comap {l : filter Œ≤} (h : has_countable_basis l) (f : Œ± ‚Üí Œ≤) :
  has_countable_basis (l.comap f) :=
begin
  rcases h with ‚ü®S, h‚ÇÅ, h‚ÇÇ‚ü©,
  refine ‚ü®preimage f '' S, countable_image _ h‚ÇÅ, _‚ü©,
  calc comap f l = ‚®Ö s ‚àà S, principal (f ‚Åª¬π' s) : by simp [h‚ÇÇ]
  ... = ‚®Ö s ‚àà S, ‚®Ö (t : set Œ±) (H : f ‚Åª¬π' s = t), principal t : by simp
  ... = ‚®Ö (t : set Œ±) (s ‚àà S) (h‚ÇÇ : f ‚Åª¬π' s = t), principal t :
    by { rw [infi_comm], congr' 1, ext t, rw [infi_comm] }
  ... = _ : by simp [-infi_infi_eq_right, infi_and]
end

