  (h_open : ‚àÄ u ‚àà s, _root_.is_open u)
  (h_nhds : ‚àÄ(a:Œ±) (u : set Œ±), a ‚àà u ‚Üí _root_.is_open u ‚Üí ‚àÉv ‚àà s, a ‚àà v ‚àß v ‚äÜ u) :
  is_topological_basis s :=
‚ü®assume t‚ÇÅ ht‚ÇÅ t‚ÇÇ ht‚ÇÇ x ‚ü®xt‚ÇÅ, xt‚ÇÇ‚ü©,
    h_nhds x (t‚ÇÅ ‚à© t‚ÇÇ) ‚ü®xt‚ÇÅ, xt‚ÇÇ‚ü©
      (is_open_inter _ _ _ (h_open _ ht‚ÇÅ) (h_open _ ht‚ÇÇ)),
