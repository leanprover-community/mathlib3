/--
A filter has a countable basis iff it is generated by a countable collection
of subsets of Œ±. (A filter is a generated by a collection of sets iff it is
the infimum of the principal filters.)

Note: we do not require the collection to be closed under finite intersections.
-/
def has_countable_basis (f : filter Œ±) : Prop :=
‚àÉ s : set (set Œ±), countable s ‚àß f = ‚®Ö t ‚àà s, principal t

lemma has_countable_basis_of_seq (f : filter Œ±) (x : ‚Ñï ‚Üí set Œ±) (h : f = ‚®Ö i, principal (x i)) :
  f.has_countable_basis :=
‚ü®range x, countable_range _, by rwa infi_range‚ü©

lemma seq_of_has_countable_basis (f : filter Œ±) (cblb : f.has_countable_basis) :
    ‚àÉ x : ‚Ñï ‚Üí set Œ±, f = ‚®Ö i, principal (x i) :=
begin
  rcases cblb with ‚ü®B, Bcbl, gen‚ü©, subst gen,
  cases B.eq_empty_or_nonempty with hB Bnonempty, { use Œª n, set.univ, simp [principal_univ, *] },
  rw countable_iff_exists_surjective_to_subtype Bnonempty at Bcbl,
  rcases Bcbl with ‚ü®g, gsurj‚ü©,
  rw lattice.infi_subtype',
  use (Œª n, g n), apply le_antisymm; rw le_infi_iff,
  { intro i, apply infi_le_of_le (g i) _, apply le_refl _ },
  { intros a, rcases gsurj a with i, apply infi_le_of_le i _, subst h, apply le_refl _ }
end

/--
Different characterization of countable basis. A filter has a countable basis
iff it is generated by a sequence of sets.
-/
lemma has_countable_basis_iff_seq (f : filter Œ±) :
  f.has_countable_basis ‚Üî
    ‚àÉ x : ‚Ñï ‚Üí set Œ±, f = ‚®Ö i, principal (x i) :=
‚ü®seq_of_has_countable_basis _, Œª ‚ü®x, xgen‚ü©, has_countable_basis_of_seq _ x xgen‚ü©

lemma mono_seq_of_has_countable_basis (f : filter Œ±) (cblb : f.has_countable_basis) :
  ‚àÉ x : ‚Ñï ‚Üí set Œ±, (‚àÄ i j, i ‚â§ j ‚Üí x j ‚äÜ x i) ‚àß f = ‚®Ö i, principal (x i) :=
begin
  rcases (seq_of_has_countable_basis f cblb) with ‚ü®x', hx'‚ü©,
  let x := Œª n, ‚ãÇ m ‚â§ n, x' m,
  use x, split,
  { intros i j hij a, simp [x], intros h i' hi'i, apply h, transitivity; assumption },
  subst hx', apply le_antisymm; rw le_infi_iff; intro i,
  { rw le_principal_iff, apply Inter_mem_sets (finite_le_nat _),
    intros j hji, rw ‚Üê le_principal_iff, apply infi_le_of_le j _, apply le_refl _ },
  { apply infi_le_of_le i _, rw principal_mono, intro a, simp [x], intro h, apply h, refl },
end

/--
Different characterization of countable basis. A filter has a countable basis
iff it is generated by a monotonically decreasing sequence of sets.
-/
lemma has_countable_basis_iff_mono_seq (f : filter Œ±) :
  f.has_countable_basis ‚Üî
    ‚àÉ x : ‚Ñï ‚Üí set Œ±, (‚àÄ i j, i ‚â§ j ‚Üí x j ‚äÜ x i) ‚àß f = ‚®Ö i, principal (x i) :=
‚ü®mono_seq_of_has_countable_basis _, Œª ‚ü®x, _, xgen‚ü©, has_countable_basis_of_seq _ x xgen‚ü©

/--
Different characterization of countable basis. A filter has a countable basis
iff there exists a monotonically decreasing sequence of sets `x i`
such that `s ‚àà f ‚Üî ‚àÉ i, x i ‚äÜ s`. -/
lemma has_countable_basis_iff_mono_seq' (f : filter Œ±) :
  f.has_countable_basis ‚Üî
    ‚àÉ x : ‚Ñï ‚Üí set Œ±, (‚àÄ i j, i ‚â§ j ‚Üí x j ‚äÜ x i) ‚àß (‚àÄ {s}, s ‚àà f ‚Üî ‚àÉ i, x i ‚äÜ s) :=
begin
  refine (has_countable_basis_iff_mono_seq f).trans (exists_congr $ Œª x, and_congr_right _),
  intro hmono,
  have : directed (‚â•) (Œª i, principal (x i)),
    from directed_of_mono _ (Œª i j hij, principal_mono.2 (hmono _ _ hij)),
  simp only [filter.ext_iff, mem_infi this ‚ü®0‚ü©, mem_Union, mem_principal_sets]
